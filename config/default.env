# Sunflower AI Professional System - Environment Configuration
# Production environment variables for partitioned device architecture
# Version: 6.2.0

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================

# Application identification
APP_NAME="Sunflower AI Professional System"
VERSION="6.2.0"
BUILD_DATE="2025-01-15"
ENVIRONMENT="production"

# System behavior
DEBUG=false
LOG_LEVEL="INFO"
LOG_TO_FILE=true
LOG_DIR="./logs"
CRASH_REPORTING=false
TELEMETRY_ENABLED=false

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================

# Authentication and encryption
REQUIRE_AUTHENTICATION=true
ENCRYPTION_ENABLED=true
ENCRYPTION_ALGORITHM="AES-256-GCM"
KEY_DERIVATION_ITERATIONS=100000
SESSION_TIMEOUT_MINUTES=60
AUTO_LOGOUT_MINUTES=15
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=30

# Parent authentication
REQUIRE_PARENT_PIN=true
PIN_LENGTH=6
PIN_COMPLEXITY="numeric"
PARENT_SESSION_DURATION_MINUTES=120

# ============================================================================
# PARTITION CONFIGURATION
# ============================================================================

# CD-ROM partition (read-only system files)
CDROM_MARKER_FILE="sunflower_cd.id"
CDROM_MIN_SIZE_GB=3
CDROM_MAX_SIZE_GB=8
VERIFY_CDROM_INTEGRITY=true

# USB partition (writable user data)
USB_MARKER_FILE="sunflower_data.id"
USB_MIN_SIZE_MB=500
USB_MAX_SIZE_GB=32
USB_ENCRYPTION=true
AUTO_BACKUP_USB=true
BACKUP_RETENTION_DAYS=30

# ============================================================================
# OPEN WEBUI CONFIGURATION
# ============================================================================

# Server settings
HOST="127.0.0.1"
PORT=8080
WEBUI_NAME="Sunflower AI Education"
WEBUI_AUTH=true
ENABLE_SIGNUP=false
DEFAULT_USER_ROLE="user"
ENABLE_ADMIN_EXPORT=true
ENABLE_COMMUNITY_SHARING=false
ENABLE_MESSAGE_RATING=true

# Session management
WEBUI_SESSION_COOKIE_SAME_SITE="lax"
WEBUI_SESSION_COOKIE_SECURE=false
SESSION_SECRET_KEY_LENGTH=64
MAX_CONVERSATION_HISTORY=100
AUTO_SAVE_INTERVAL=300
CONVERSATION_EXPORT_ENABLED=false

# UI configuration
SHOW_MODEL_SELECTOR=false
SHOW_SYSTEM_PROMPTS=false
ENABLE_MARKDOWN=true
ENABLE_CODE_HIGHLIGHTING=true
ENABLE_LATEX=true
ENABLE_FILE_UPLOAD=false
MAX_MESSAGE_LENGTH=500

# ============================================================================
# OLLAMA CONFIGURATION
# ============================================================================

# Ollama server
OLLAMA_HOST="http://localhost:11434"
OLLAMA_API_VERSION="0.1.0"
OLLAMA_TIMEOUT_SECONDS=120
OLLAMA_KEEP_ALIVE="5m"
OLLAMA_NUM_PARALLEL=1
OLLAMA_MAX_LOADED_MODELS=2

# Model management
AUTO_PULL_MODELS=false
MODEL_DOWNLOAD_TIMEOUT=3600
VERIFY_MODEL_CHECKSUMS=true
DEFAULT_MODEL_KIDS="sunflower-kids"
DEFAULT_MODEL_EDUCATOR="sunflower-educator"

# Hardware optimization
AUTO_DETECT_HARDWARE=true
GPU_LAYERS_AUTO=true
CPU_THREADS_AUTO=true
CONTEXT_SIZE_AUTO=true
BATCH_SIZE_AUTO=true

# ============================================================================
# SAFETY AND CONTENT FILTERING
# ============================================================================

# Content safety
CONTENT_FILTERING_ENABLED=true
PROFANITY_FILTER_ENABLED=true
TOPIC_RESTRICTION_ENABLED=true
AGE_VERIFICATION_REQUIRED=true
SAFETY_LOGGING_ENABLED=true

# Safety thresholds
MAX_SAFETY_STRIKES=3
SAFETY_COOLDOWN_MINUTES=30
SAFETY_ALERT_PARENTS=true
BLOCK_THRESHOLD_SCORE=0.8

# Allowed topics (comma-separated)
ALLOWED_TOPICS="science,technology,engineering,mathematics,education,learning,homework"

# Response limits by age group
RESPONSE_LENGTH_K2=50
RESPONSE_LENGTH_ELEMENTARY=75
RESPONSE_LENGTH_MIDDLE=125
RESPONSE_LENGTH_HIGH=200

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================

# Response timing
TARGET_RESPONSE_TIME_MS=3000
MAX_RESPONSE_TIME_MS=10000
RESPONSE_TIMEOUT_SECONDS=30
STREAM_RESPONSES=true

# Resource limits
MAX_MEMORY_USAGE_MB=2048
MAX_CPU_PERCENT=80
MAX_GPU_MEMORY_MB=4096
CACHE_SIZE_MB=500

# Connection pooling
CONNECTION_POOL_SIZE=10
CONNECTION_TIMEOUT_SECONDS=10
KEEPALIVE_SECONDS=300

# ============================================================================
# DATA MANAGEMENT
# ============================================================================

# Profile management
MAX_PROFILES_PER_FAMILY=10
PROFILE_BACKUP_ENABLED=true
PROFILE_EXPORT_ENABLED=false
ANONYMOUS_USAGE_STATS=false

# Session recording
SESSION_RECORDING_ENABLED=true
SESSION_COMPRESSION_ENABLED=true
SESSION_RETENTION_DAYS=90
MAX_SESSION_SIZE_MB=10

# Database configuration
DB_TYPE="sqlite"
DB_ENCRYPTION=true
DB_BACKUP_INTERVAL_HOURS=24
DB_OPTIMIZATION_INTERVAL_DAYS=7

# ============================================================================
# USER INTERFACE
# ============================================================================

# Theme and appearance
DEFAULT_THEME="light"
THEME_CUSTOMIZATION_ENABLED=false
FONT_SIZE_DEFAULT=14
HIGH_CONTRAST_AVAILABLE=true

# Accessibility
SCREEN_READER_SUPPORT=true
KEYBOARD_NAVIGATION=true
VOICE_INPUT_ENABLED=false
VOICE_OUTPUT_ENABLED=false

# Language settings
DEFAULT_LANGUAGE="en-US"
AVAILABLE_LANGUAGES="en-US"
AUTO_DETECT_LANGUAGE=false

# ============================================================================
# MONITORING AND DIAGNOSTICS
# ============================================================================

# Health checks
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL_SECONDS=60
HEALTH_CHECK_TIMEOUT_SECONDS=10

# Performance monitoring
PERFORMANCE_MONITORING=true
METRIC_COLLECTION_INTERVAL=300
PERFORMANCE_LOG_ENABLED=true

# Error handling
ERROR_REPORTING_ENABLED=false
ERROR_LOG_VERBOSE=false
STACK_TRACES_IN_PRODUCTION=false
USER_FRIENDLY_ERRORS=true

# ============================================================================
# MANUFACTURING AND DEPLOYMENT
# ============================================================================

# Device identification
REQUIRE_DEVICE_AUTHENTICATION=true
DEVICE_ID_ALGORITHM="SHA256"
BATCH_VERIFICATION_ENABLED=true

# Quality control
QC_MODE_ENABLED=false
QC_VERBOSE_LOGGING=false
QC_TEST_TIMEOUT_SECONDS=300

# Update mechanism (disabled for zero-maintenance)
AUTO_UPDATE_ENABLED=false
UPDATE_CHECK_ENABLED=false
MANUAL_UPDATE_ALLOWED=false

# ============================================================================
# DEVELOPMENT AND TESTING
# ============================================================================

# Development mode settings (production should be false)
DEV_MODE=false
DEV_SKIP_AUTH=false
DEV_MOCK_HARDWARE=false
DEV_VERBOSE_LOGGING=false
DEV_DISABLE_SAFETY=false

# Testing configuration
TEST_MODE=false
TEST_DATA_RESET=false
TEST_SKIP_PARTITIONS=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Feature toggles for gradual rollout
FEATURE_VOICE_INTERACTION=false
FEATURE_MULTI_LANGUAGE=false
FEATURE_CLOUD_SYNC=false
FEATURE_COLLABORATIVE_LEARNING=false
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_CUSTOM_MODELS=false
FEATURE_API_ACCESS=false

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
