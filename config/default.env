# Sunflower AI Professional System - Default Environment Variables
# Version: 6.2.0
# These values use standardized partition names

# ==================== SYSTEM CONFIGURATION ====================
APP_NAME=Sunflower AI Professional System
APP_VERSION=6.2.0
DEBUG=false
ENVIRONMENT=production

# ==================== PARTITION CONFIGURATION ====================
# Partition Names (Standardized)
CDROM_PARTITION_NAME=SUNFLOWER_CD
USB_PARTITION_NAME=SUNFLOWER_DATA

# Marker Files
CDROM_MARKER_FILE=sunflower_cd.id
USB_MARKER_FILE=sunflower_data.id

# Marker Content
CDROM_MARKER_CONTENT=SUNFLOWER_AI_SYSTEM_v6.2.0
USB_MARKER_CONTENT=SUNFLOWER_AI_DATA_v6.2.0

# ==================== SECURITY SETTINGS ====================
ENABLE_AUTHENTICATION=true
ENCRYPTION_ALGORITHM=AES-256-GCM
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=3
PASSWORD_MIN_LENGTH=6

# ==================== OPEN WEBUI SETTINGS ====================
OPENWEBUI_HOST=0.0.0.0
OPENWEBUI_PORT=8080
OPENWEBUI_AUTH=false
OPENWEBUI_SIGNUP=false
OPENWEBUI_DEFAULT_MODELS=sunflower-kids,sunflower-educator

# ==================== OLLAMA CONFIGURATION ====================
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_API_VERSION=0.1
OLLAMA_NUM_PARALLEL=1
OLLAMA_MAX_LOADED_MODELS=2
OLLAMA_KEEP_ALIVE=5m

# ==================== SAFETY AND CONTENT FILTERING ====================
SAFETY_LEVEL=maximum
CONTENT_FILTER_ENABLED=true
PROFANITY_FILTER_ENABLED=true
PERSONAL_INFO_FILTER_ENABLED=true
VIOLENCE_FILTER_ENABLED=true
MAX_MESSAGE_LENGTH=1000
MIN_CHILD_AGE=2
MAX_CHILD_AGE=18

# ==================== PERFORMANCE TUNING ====================
RESPONSE_TIMEOUT_SECONDS=30
MAX_CONTEXT_LENGTH=4096
MAX_CONVERSATION_TURNS=100
CACHE_ENABLED=true
CACHE_SIZE_MB=500

# ==================== LOGGING CONFIGURATION ====================
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30
LOG_MAX_SIZE_MB=100

# ==================== BACKUP CONFIGURATION ====================
AUTO_BACKUP_ENABLED=true
BACKUP_FREQUENCY_DAYS=7
BACKUP_RETENTION_COUNT=4
BACKUP_COMPRESSION=true

# ==================== FEATURE FLAGS ====================
ENABLE_ACHIEVEMENTS=true
ENABLE_PROGRESS_TRACKING=true
ENABLE_PARENT_DASHBOARD=true
ENABLE_MULTI_LANGUAGE=false
ENABLE_VOICE_INPUT=false
ENABLE_OFFLINE_MODE=true
