; Sunflower AI Professional System - Windows Autorun Configuration
; Version: 6.2 | Platform: Windows | Architecture: CD-ROM Partition
; This file enables automatic launch when the device is inserted
; Template variables are replaced during device creation

[autorun]
; Primary launcher executable
open=launchers\windows_launcher.exe

; Custom icon for the device
icon=assets\sunflower.ico

; Volume label displayed in Windows Explorer
label={VOLUME_LABEL}

; Action menu items when right-clicking the device
action=Install Sunflower AI Professional System

[Content]
; Content type identification
MusicFiles=false
PictureFiles=false
VideoFiles=false
DataFiles=true

[DeviceInstall]
; Device-specific installation drivers (if needed)
DriverPath=drivers\windows

[Setup]
; Installation configuration
ProductName={PRODUCT_NAME}
ProductVersion={VERSION}
Publisher={PUBLISHER}
SupportURL={SUPPORT_URL}
InstallationType=Portable
RequiresAdmin=false
MinimumOS=Windows10
Architecture=x64

[Launch]
; Launch options for different scenarios
FirstRun=launchers\windows_launcher.exe /firstrun
ParentMode=launchers\windows_launcher.exe /parent
EducatorMode=launchers\windows_launcher.exe /educator
RepairMode=launchers\windows_launcher.exe /repair

[Paths]
; Important paths on the CD-ROM partition
Models=models\
Modelfiles=modelfiles\
Documentation=documentation\
Interface=interface\
Ollama=ollama\windows\

[Hardware]
; Hardware detection and model selection
AutoDetect=true
ModelVariants={MODEL_VARIANTS}
DefaultModel=llama3.2:1b
HighPerformanceModel=llama3.2:7b
LowMemoryModel=llama3.2:1b-q4_0

[Security]
; Security and verification settings
VerifyChecksum=true
ChecksumFile=security\checksums.sha256
ManifestFile=security\manifest.json
DeviceID={DEVICE_ID}
EncryptionEnabled=true

[USB_Partition]
; Configuration for the writable USB partition
DataVolumeLabel={VOLUME_LABEL}_DATA
ProfilesPath=family_profiles\
ConversationsPath=conversation_logs\
ProgressPath=learning_progress\
DashboardPath=parent_dashboard\
ConfigPath=runtime_config\

[Features]
; Feature flags
OfflineMode=true
FamilyProfiles=true
ParentDashboard=true
SafetyFiltering=true
STEMFocus=true
AgeAdaptation=true
MultipleChildren=true
SessionLogging=true

[Compatibility]
; Compatibility settings
.NETFramework=4.8
VisualCRedist=2019
DirectX=11
WindowsDefenderException=true

[Localization]
; Language support
DefaultLanguage=en-US
SupportedLanguages=en-US,es-ES,fr-FR,de-DE,zh-CN
LanguagePacksIncluded=false

[Telemetry]
; Privacy and telemetry settings
CollectTelemetry=false
SendCrashReports=false
AnonymousUsageStats=false
LocalLoggingOnly=true

[Updates]
; Update configuration (new device purchase model)
AutoUpdate=false
CheckForUpdates=false
UpdateURL=
UpdateModel=NewDevicePurchase

[shell]
; Shell integration for Windows Explorer
shell\install\command=launchers\windows_launcher.exe /install
shell\readme\command=notepad.exe README.txt
shell\documentation\command=documentation\user_guide.pdf
shell\troubleshoot\command=launchers\windows_launcher.exe /troubleshoot

[DigitalSignature]
; Digital signature information
SignatureVersion=2.0
SignatureMethod=SHA256
CertificateThumbprint={CERT_THUMBPRINT}
TimestampServer=http://timestamp.digicert.com

; Additional metadata for Windows
[.ShellClassInfo]
InfoTip=Sunflower AI Professional - Family-focused K-12 STEM Education System
IconFile=assets\sunflower.ico
IconIndex=0

; Custom properties that can be read by the launcher
[CustomProperties]
BuildDate={BUILD_DATE}
BuildNumber={BUILD_NUMBER}
TargetAudience=Families,Educators
AgeRange=5-17
SubjectAreas=Science,Technology,Engineering,Mathematics
SafetyLevel=Maximum
ContentRating=K-12
LicenseType=Family
MaxProfiles=10
StorageRequired=8GB
RAMRequired=4GB

; File associations (optional)
[FileAssociations]
.sai=SunflowerAI.Session
.sap=SunflowerAI.Profile
.sal=SunflowerAI.Lesson

; End of autorun.inf template
; Variables to be replaced during build:
; {VOLUME_LABEL} - Device volume label
; {PRODUCT_NAME} - Product name
; {VERSION} - Product version
; {PUBLISHER} - Publisher name
; {SUPPORT_URL} - Support website URL
; {MODEL_VARIANTS} - Comma-separated list of model variants
; {DEVICE_ID} - Unique device identifier
; {CERT_THUMBPRINT} - Certificate thumbprint for verification
; {BUILD_DATE} - Build date
; {BUILD_NUMBER} - Build number
